<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lorenzo.aaflats.AllProperties"
    tools:showIn="@layout/activity_all_properties">

    <TextView
        android:id="@+id/text_view_all_properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All properties"
        android:textSize="18sp"
        android:textColor="#FF5722" />
    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <android.support.v7.widget.RecyclerView
        android:visibility="invisible"
        android:layout_below="@+id/text_view_all_properties"
        android:paddingTop="6dp"
        android:id="@+id/properties_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
